<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivider"
    android:orientation="vertical"
    tools:context="com.barberapp.barberapp.LoginPB">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensajes de barberos"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#fff"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnBarberosVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButtons"
        android:fontFamily="casual"
        android:text="Volver a la ventana principal"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_margin="2dp"/>

    <ListView
        android:id="@+id/lvMensajesBarberos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:divider="#d1d1d1"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_margin="2dp"/>

</LinearLayout>
